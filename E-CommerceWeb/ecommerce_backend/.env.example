# Environment Variables for E-Commerce Backend
# Copy this file to .env and update with your actual values

# Password Security - Pepper Key
# IMPORTANT: Keep this secret! Never commit to version control
# Generate a strong random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
PASSWORD_PEPPER=your-secret-pepper-key-change-this-in-production

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Django Secret Key
SECRET_KEY=your-django-secret-key

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Elasticsearch Configuration
ELASTICSEARCH_HOST=http://localhost:9200
